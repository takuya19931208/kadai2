<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<% if @book.errors.any? %>
  <div class="error_message">
        	<h2>2 errors</h2>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
  </div>
	<% end %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "back", books_path %>